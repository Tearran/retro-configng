#!/bin/bash

while (( "$#" )); do
    case "$1" in
        get-deps=*)
            deps="${1#get-deps=}"
            IFS=' ' read -r -a get_deps <<< "$deps"
            # infile rm_dependencies "git nano etc..."
            get_dependencies "${get_deps[@]}"
            shift
            ;;
        rm-deps=*)
            deps="${1#rm-deps=}"
            IFS=' ' read -r -a rm_deps <<< "$deps"
            remove_dependencies "${rm_deps[@]}"
            shift
            ;;
        ping=true)
            see_ping
            shift
            ;;
        --help|-h)
            see_help
            shift
            ;;

        *)
            echo "Error: Unsupported flag $1" >&2
            exit 1
            ;;
    esac
done

exit 0

